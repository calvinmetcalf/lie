{
  "name": "lie",
  "version": "2.5.4",
  "description": "A minimal and fast promise implementation",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/calvinmetcalf/lie.git"
  },
  "bugs": {
    "url": "https://github.com/calvinmetcalf/lie/issues"
  },
  "keywords": [
    "lie",
    "promise",
    "async"
  ],
  "main": "lib/lie.js",
  "scripts": {
    "test": "jshint lib/*.js && node ./test/adapter",
    "build-js": "browserify -s Promise ./lib/lie.js > ./dist/lie.js",
    "build-min": "uglifyjs ./dist/lie.js -mc > ./dist/lie.min.js",
    "build-nc": "browserify -s Lie ./lib/lie.js > ./dist/lie.noconflict.js",
    "build": "npm run build-js && npm run build-min && npm run build-nc"
  },
  "jam": {
    "main": "dist/lie.js",
    "include": [
      "README.md",
      "LICENSE.txt",
      "dist/lie.js"
    ]
  },
  "devDependencies": {
    "uglify-js": "^2.4.13",
    "jshint": "^2.4.4",
    "browserify": "^3.32.1",
    "istanbul": "^0.2.6",
    "promises-aplus-tests": "^2.0.4"
  },
  "dependencies": {
    "immediate": "^2.6.3"
  }
}
